<h2>新規登録</h2>

<%= form_for(@user, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :name, "名前" %>
    <span class="mandatory">必須</span><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :company_name ,"法人名"%>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :age, "年齢" %>
    <span class="mandatory">必須</span><br />
    <%= f.text_field :age %>
  </div>

  <div class='input-birth-wrap'>
    <%= f.label :birthday, "生年月日"%>
    <span class="mandatory-i">必須</span><br />
    <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <span class="mandatory">必須</span><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :tell_number, "電話番号" %>
    <span class="mandatory">必須</span>
    <%= f.text_field :tell_number %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード(6文字以上)" %>
    <span class="mandatory">必須</span>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード(確認用)" %>
    <span class="mandatory">必須</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Next" %>
  </div>
<% end %>
